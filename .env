# Bibliotheca AI Configuration

# GPU Device: auto, cuda, mps, cpu
BIBLIO_GPU_DEVICE=auto

# OCR Languages (comma-separated)
BIBLIO_OCR_LANGUAGES=ko,en

# OCR Tier 1 (Marker/Surya) - disabled for parallel mode (MPS GPU contention)
BIBLIO_OCR_TIER1_ENABLED=false

# LlamaParse (Tier 3 fallback - optional)
BIBLIO_OCR_TIER3_ENABLED=false
BIBLIO_LLAMA_CLOUD_API_KEY=

# Ollama LLM for contextual retrieval
BIBLIO_OLLAMA_BASE_URL=http://localhost:11434
BIBLIO_OLLAMA_MODEL=llama3:13b

# Database Paths
BIBLIO_LANCEDB_DIR=./lancedb_data
BIBLIO_SQLITE_DB_PATH=./bibliotheca_meta.db

# Embedding (reduce internal batch to prevent MPS OOM on long texts)
BIBLIO_EMBEDDING_BATCH_SIZE=8

# Logging
BIBLIO_LOG_LEVEL=INFO
